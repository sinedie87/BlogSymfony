{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

    <h1>Articles</h1>

        {% for article in articles %}
        
        <article>
            <h2>{{ article.title}}</h2>
            <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} Ã  {{ article.createdAt | date('H/i') }}</div>
            <div class="content">
                <img src="{{ article.image }}" alt="">
                {{ article.content | raw }}
                <hr>
                <a href="{{ path('articleUnique', {'id' : article.id}) }}" class="btn btn-primary">Lire la suite</a>

            </div>
        </article>

        {% endfor %}

{% endblock %}
