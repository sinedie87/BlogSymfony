{% extends 'base.html.twig' %}

{% block title %}Créer un article{% endblock %}

{% block body %}

    <h1>Créer un article</h1>

    {{ form_start(formArticle) }}

    {# {{ form(formArticle) }} #}

    {# {{ form_errors(formArticle) }} #}
    {{ form_row(formArticle.title, { 'attr' : {'placeholder' : "Titre de l'article"}}) }}
    {{ form_row(formArticle.category) }}
    {{ form_row(formArticle.content, { 'attr' : {'placeholder' : "Contenu de l'article"}}) }}
    {{ form_row(formArticle.image, { 'attr' : {'placeholder' : "URL de l'image"}}) }}
    {{ form_row(formArticle.createdBy, { 'attr' : {'placeholder' : "Prénom de l'auteur"}}) }}
    {# {{ form_row(formArticle.createdAt) }} #}


    <button type="submit" class="btn btn-success">
    {% if editMode %}
    Enregistrer les modifications    
    {% else %}
    Ajouter l'article    
    {% endif %}
    </button>

    {{ form_end(formArticle) }}

    

{% endblock %}
